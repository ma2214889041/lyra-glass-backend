    "db:migrate:dev": "wrangler d1 execute lyra-db-dev --file=./migrations/001_init.sql --local",
    "tail": "wrangler tail"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.6",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.24.0"
  }
}
